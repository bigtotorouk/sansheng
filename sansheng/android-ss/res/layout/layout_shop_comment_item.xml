<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/img_shop" >

        <TextView android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2014-4-30"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="生命健康东方素养"
            android:textColor="#202020"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:text="评论信息"
        android:textColor="#8f8f8f"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/division_shop_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Lable_logistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物流服务："
            android:textColor="#6c6c6c"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="@style/Level_Start_Bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Lable_Shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品品质："
            android:textColor="#6c6c6c"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBar2"
            style="@style/Level_Start_Bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1" />
    </LinearLayout>

</LinearLayout>